<UserControl x:Class="Chat.UserControl.UserControlMessageSent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="Gray" CornerRadius="15 15 0 15" Margin="10 12">
            <TextBlock x:Name="User" Margin="15" TextWrapping="Wrap" Foreground="White" Width="300" FontSize="16" FontFamily="Cascadia Mono SemiLight"/>
        </Border>
        <TextBlock x:Name="Time" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10" Margin="10 0" Foreground="White"/>
    </Grid>
</UserControl>
